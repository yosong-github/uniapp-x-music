<script lang="uts">
	// #ifdef APP-ANDROID
	let firstBackTime = 0
	// #endif
	
	
	export default {
		onLaunch: function () {
			console.log('App Launch')
		},
		onShow: function () {
			console.log('App Show')
		},
		onHide: function () {
			console.log('App Hide')
		},
		// #ifdef APP-ANDROID
		onLastPageBackPress: function () {
			console.log('App LastPageBackPress')
			if (firstBackTime == 0) {
				uni.showToast({
					title: '再按一次返回桌面',
					position: 'bottom',
				})
				firstBackTime = Date.now()
				setTimeout(() => {
					firstBackTime = 0
				}, 2000)
			} else if (Date.now() - firstBackTime < 2000) {
				firstBackTime = Date.now()
				UTSAndroid.getUniActivity()?.moveTaskToBack(true)
			}
		},
		// #endif
		onExit: function () {
			console.log('App Exit')
		},
	}
</script>

